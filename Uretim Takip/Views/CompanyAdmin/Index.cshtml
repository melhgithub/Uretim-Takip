@using EntityLayer.Concrete
@using Uretim_Takip.Dtos
@using System.ComponentModel
@using Newtonsoft.Json
@model (List<Company> companies, CompanyFilterDto filter)
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Firma Listesi</h1>

<button class="btn btn-primary" onclick="openYeniFirmaModal()">Yeni Firma</button>
<br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-info"></i> Bilgilendirme</h5>
        @TempData["Message"]
    </div>
}

<form id="filterForm" method="get" action="@Url.Action("Index", "CompanyAdmin")">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-filter"></i>
                Filtrele
            </h3>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-sm-3">
                    <dt>Firma Adı:</dt>
                    <input type="text" class="form-control" name="name" placeholder="Firma Adı" value="@Model.filter.Name">
                </div>
                <div class="col-sm-3">
                    <dt>Mail:</dt>
                    <input type="text" class="form-control" name="mail" placeholder="Mail" value="@Model.filter.Mail">
                </div>
                <div class="col-sm-3">
                    <dt>Telefon Numarası:</dt>
                    <input type="number" class="form-control" name="phonenumber" placeholder="Tel.No." value="@Model.filter.PhoneNumber">
                </div>
                <div class="col-sm-3">
                    <dt>Açıklama:</dt>
                    <input type="text" class="form-control" name="description" placeholder="Açıklama" value="@Model.filter.Description">
                </div>

                <div class="col-sm-2">
                    <dt>Durum:</dt>
                    <select name="Status" class="form-control" data="@Enum.GetName(typeof(CompanyStatuses), Model.filter.Status)">
                        @foreach (var enumValue in Enum.GetValues(typeof(CompanyStatuses)))
                        {
                            string description = ((DescriptionAttribute)typeof(CompanyStatuses)
                                .GetMember(enumValue.ToString())[0]
                                .GetCustomAttributes(typeof(DescriptionAttribute), false)
                                .FirstOrDefault())?.Description ?? enumValue.ToString();

                            <option value="@enumValue" selected="@((CompanyStatuses)enumValue == Model.filter.Status)">@description</option>
                        }
                    </select>
                </div>

                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary w-100">Filtrele</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-cubes"></i>
            Firmalar
        </h3>
    </div>


    <div class="card-body">

        <table id="companyTable" class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Firma Adı</th>
                    <th>Mail</th>
                    <th>Telefon No</th>
                    <th>Durum</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.companies)
                {
                    <tr>
                        <td>@company.ID</td>
                        <td>@company.Name</td>
                        <td>@company.Mail</td>
                        <td>@company.PhoneNumber</td>
                        @if (company.Status == (CompanyStatuses)1)
                        {
                            <td>AKTİF</td>
                        }
                        @if (company.Status == (CompanyStatuses)2)
                        {
                            <td>KALDIRILDI</td>
                        }
                        <td>@company.Description</td>
                        <td>
                            <button class="btn btn-primary" onclick="openEditFirmaModal(this)"
                                    data-companyid="@company.ID"
                                    data-companyname="@company.Name"
                                    data-companymail="@company.Mail"
                                    data-companydescription="@company.Description"
                                    data-companyphonenumber="@company.PhoneNumber"
                                    data-companypassword="@company.Password"
                                    data-companystatus="@company.Status">
                                Düzenle
                            </button>
                            <button class="btn btn-success" onclick="openApproveFirmaModal(this)"
                                    data-companyid="@company.ID"
                                    data-companystatus="@company.Status">
                                Onayla
                            </button>
                            <button class="btn btn-warning" onclick="openDeleteFirmaModal(this)"
                                    data-companyid="@company.ID"
                                    data-companystatus="@company.Status">
                                Kaldır
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>


<script>
    function openApproveFirmaModal(button) {
    var data = button.dataset;
     $.dialog({
        title: 'Firma Onayla',
         content: `
            <!-- ${JSON.stringify(data)} -->
            <form method="post" action="@Url.Action("ApproveCompany", "CompanyAdmin")">

                <div class="form-group">
                    <label>Onaylamak istiyor musunuz ?</label>
                </div>

                <div class="form-group">
                    <input type="text" id="ID" name="ID" class="form-control" value="${data.companyid}" required hidden />
                </div>

                <div class="form-group">
                    <input type="text" id="Status" name="Status" class="form-control" value="${data.companystatus}" required hidden />
                </div>

                <div class="form-group">
                    <input type="submit" value="Onayla" class="btn btn-primary w-100" />
                </div>

            </form>
        `
    });
    }

    function openDeleteFirmaModal(button) {
    var data = button.dataset;
     $.dialog({
        title: 'Firma Sil',
         content: `
            <!-- ${JSON.stringify(data)} -->
            <form method="post" action="@Url.Action("DeleteCompany", "CompanyAdmin")">

                <div class="form-group">
                    <label>Kaldırmak istiyor musunuz ?</label>
                </div>

                <div class="form-group">
                    <input type="text" id="ID" name="ID" class="form-control" value="${data.companyid}" required hidden />

                </div>

                <div class="form-group">
                    <input type="submit" value="Kaldır" class="btn btn-warning w-100" />
                </div>

            </form>
        `
    });
    }

    function openEditFirmaModal(button) {
    var data = button.dataset;
     $.dialog({
        title: 'Firma Düzenle',
         content: `
            <!-- ${JSON.stringify(data)} -->
            <form method="post" action="@Url.Action("EditCompany", "CompanyAdmin")">

                <div class="form-group">
                    <input type="text" id="ID" name="ID" class="form-control" value="${data.companyid}" required hidden />

                </div>

                <div class="form-group">
                    <label for="Name">Firma Adı:</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="${data.companyname}" required />
                </div>

                <div class="form-group">
                    <label for="Material">Mail:</label>
                    <input type="text" id="Mail" name="Mail" class="form-control" value="${data.companymail}" required />
                </div>


                <div class="form-group">
                    <label for="Description">Açıklama :</label>
                    <textarea id="Description" name="Description" class="form-control" rows="3">${data.companydescription}</textarea>
                </div>


                <div class="form-group">
                    <label for="Material">Telefon No:</label>
                    <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="${data.companyphonenumber}" required />
                </div>

                <div class="form-group">
                    <label for="Material">Şifre:</label>
                    <input type="text" id="Password" name="Password" class="form-control" value="${data.companypassword}" required />
                </div>

                <div class="form-group">
                    <label for="Status">Durum :</label>
                    <select id="Status" name="Status" class="form-control" data="${data.companystatus}" required>
                        <option value="1" ${data.companystatus == 'Approved' ? 'selected' : ''}>AKTİF</option>
                        <option value="2" ${data.companystatus == 'Removed' ? 'selected' : ''}>KALDIRILDI</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Düzenle" class="btn btn-primary w-100" />
                </div>

            </form>
        `
    });
}


    function openYeniFirmaModal() {
        $.dialog({
            title: 'Yeni firma oluştur',
            content: `

<form method="post" action="@Url.Action("AddCompany", "CompanyAdmin")">
    <div class="form-group">
        <label for="Name">Firma Adı:</label>
        <input type="text" id="Name" name="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Mail">Mail:</label>
        <input type="mail" id="Mail" name="Mail" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Telefon No:</label>
        <input type="number" id="PhoneNumber" name="PhoneNumber" class="form-control" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="Description">Açıklama :</label>
        <textarea id="Description" name="Description" class="form-control" rows="3"> </textarea>
    </div>

    <div class="form-group">
        <label for="Password">Şifre: </label>
        <input type="text" id="Password" name="Password" class="form-control" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="Status">Durum :</label>
        <select id="Status" name="Status" class="form-control" required>
            <option value="1">AKTİF</option>
            <option value="2">KALDIRILDI</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Oluştur" class="btn btn-primary w-100" />
    </div>

</form>

`
        });

    }
    </script>


