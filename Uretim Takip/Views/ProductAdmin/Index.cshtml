@using EntityLayer.Concrete
@using Uretim_Takip.Dtos
@using System.ComponentModel
@using Newtonsoft.Json
@model ProductFilterDto filter
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Ürün Listesi</h1>

<button class="btn btn-primary" onclick="openYeniUrunModal()">Yeni Ürün</button>
<br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-info"></i> Bilgilendirme</h5>
        @TempData["Message"]
    </div>
}

<form id="filterForm" method="get" action="@Url.Action("Filter", "ProductAdmin")">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-filter"></i>
                Filtrele
            </h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2">
                    <dt>Kategori:</dt>
                    <select name="CategoryName" class="form-control" value="@Model.filter.CategoryName">
                        <option value="">TÜMÜ</option>
                        @foreach (var categoryName in Model.filter.Categories)
                        {
                            <option value="@categoryName" selected="@(categoryName == Model.filter.CategoryName)">@categoryName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-2">
                    <dt>Firma:</dt>
                    <select name="CompanyName" class="form-control" data="@Model.filter.CompanyName">
                        <option value="">TÜMÜ</option>
                        @foreach (var companyName in Model.filter.Companies)
                        {
                            <option value="@companyName" selected="@(companyName == Model.filter.CompanyName)">@companyName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-2">
                    <dt>Ürün Adı:</dt>
                    <input type="text" class="form-control" name="name" placeholder="Ürün Adı" value="@Model.filter.Name">
                </div>
                <div class="col-sm-2">
                    <dt>Malzeme:</dt>
                    <input type="text" class="form-control" name="material" placeholder="Malzeme" value="@Model.filter.Material">
                </div>
                <div class="col-sm-1">
                    <dt>Fiyat:</dt>
                    <input type="number" class="form-control" name="price" placeholder="Fiyat" value="@Model.filter.Price">
                </div>
                <div class="col-sm-1">
                    <dt>Adet:</dt>
                    <input type="number" class="form-control" name="Piece" placeholder="Adet" value="@Model.filter.Piece">
                </div>
                <div class="col-sm-2">
                    <dt>Durum:</dt>
                    <select name="Status" class="form-control" data="@Enum.GetName(typeof(ProductStatuses), Model.filter.Status)">
                        @foreach (var enumValue in Enum.GetValues(typeof(ProductStatuses)))
                        {
                            string description = ((DescriptionAttribute)typeof(ProductStatuses)
                                .GetMember(enumValue.ToString())[0]
                                .GetCustomAttributes(typeof(DescriptionAttribute), false)
                                .FirstOrDefault())?.Description ?? enumValue.ToString();

                            <option value="@enumValue" selected="@((ProductStatuses)enumValue == Model.filter.Status)">@description</option>
                        }
                    </select>
                </div>
                <div class="col-sm-2">
                    <dt>Açıklama:</dt>
                    <input type="text" class="form-control" name="description" placeholder="Açıklama" value="@Model.filter.Description">
                </div>
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary w-100">Filtrele</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-cubes"></i>
            Ürünler
        </h3>
    </div>

    <div class="card-body">

        <table id="productTable" class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori</th>
                    <th>Firma</th>
                    <th>Ürün Adı</th>
                    <th>Malzeme</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Durum</th>
                    <th>Açıklama</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @await Html.PartialAsync("_ProductTable")
            </tbody>
        </table>

    </div>

</div>




